<!DOCTYPE html>
<html lang="en">
    <head>
        <title>List Singer</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <br>
            <div class="row">
                <div class="col-12">
                    <a class="btn btn-success" href="/add-singer">Add new singer</a>
                </div>
            </div>
            <br>
            <% if(error_message !=''){%>
                <div class="row justify-content-center">
                    <div class="col-6 ">
                        <div class="alert alert-danger">
                            <%=error_message%>
                        </div>
                    </div>
                </div>
            <% } %>
            <% if(success_message !=''){%>
                <div class="row justify-content-center">
                    <div class="col-6 ">
                        <div class="alert alert-success">
                            <%=success_message%>
                        </div>
                    </div>
                </div>
            <% } %>
            <div class="row">
                <div class="col-12">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Avatar</th>
                            <th scope="col">Options</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% singers.forEach((singer, index)=>{ %>
                                
                            <tr>
                                <th scope="row">
                                    <%=index+1%>
                                </th>
                                <td>
                                    <a href="<%=singer.link%>" target="_blank" >
                                        <%=singer.name%>
                                    </a>
                                </td>
                                <td>
                                <img width="200px" src="images/<%=singer.avatar%>" alt="">
                                </td>
                                <td>
                                <button style="width:100%" type="button" class="btn btn-warning">
                                    <a href="/update/<%=singer._id%>">Update</a>
                                </button>
                                <br><br>
                                <button style="width:100%"  type="button" class="btn btn-danger" onclick="return confirm('Are you sure?')" >
                                    <a href="/delete/<%=singer._id%>">Delete</a>
                                </button>
                                
                                </td>
                            </tr>
                            
                            <% })%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>